
@perspective: 1500px;
@duration: 500ms;
@easing: @defaultEasing;


@dimmerColor: rgba(0, 0, 0, 0.7);
@dimmerTransition: opacity @duration;


@canvasBackground: @lightBlack;


@boxShadow: 5px 5px 20px rgba(0, 0, 0, 0.4);
@horizontalBoxShadow: @boxShadow;
@verticalBoxShadow: @boxShadow;


@bottomLayer: 1;
@middleLayer: 2;
@fixedLayer: 101;
@topLayer: 102;
@dimmerLayer: 1000;


@veryThinWidth: 60px;
@thinWidth: 150px;
@width: 260px;
@wideWidth: 350px;
@veryWideWidth: 475px;

@height: 36px;
