{
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
      "cypress",
      "@testing-library/jest-dom",
      "@types/testing-library__jest-dom"
    ],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strictFunctionTypes": true,
    "sourceMap": true,
    "listFiles": true,
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["cypress", "src"],
  "exclude": [
    "node_modules",
    "__screenshots__",
    "log",
    "uploads",
    ".next",
    ".git",
    "out",
    "static",
    "coverage",
    "dist",
    "jest",
    "cypress",
    "stroybook-static",
    "build"
  ]
}
